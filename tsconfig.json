{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "components": ["src/components"],
      "constants/*": ["src/constants/*"],
      "containers": ["src/containers"],
      "enums": ["src/enums"],
      "models": ["src/models"],
      "screens": ["src/screens"],
      "stores": ["src/stores"]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
